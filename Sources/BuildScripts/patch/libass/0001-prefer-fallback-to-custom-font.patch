+static bool is_private_font(CTFontRef fb)
+{
+    CTFontDescriptorRef fontd = CTFontCopyFontDescriptor(fb);
+    if (!fontd)
+        return false;
+
+    char *path = get_font_file(fontd);
+    CFRelease(fontd);
